<br><br><br><br><br><br>
<div class="container">
<div class="login-block">
  <h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "username md-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :class => "password md-field" %>
  </div>

  

  <div class="actions">
    <%= f.submit "Log in", :class => "md-signup"%>
  </div>
<% end %>
<br><br><br>
  <%= link_to "Sign up", new_registration_path(resource_name), :class => "btn btn-primary btn-block"   %>
  
    <%= link_to "Forgot your password?", new_password_path(resource_name), :style => "color: white;", :class => "btn btn-primary btn-block"    %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :style => "color: white;", :class => "btn btn-primary btn-block"    %>

</div>
</div>