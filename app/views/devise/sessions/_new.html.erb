<div class="login-block">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "username md-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :class => "password md-field" %>
  </div>

  

  <div class="actions">
    <%= f.submit "Log in", :class => "md-signup"%>
  </div>
<% end %>

<%= link_to "Forgot your password?", new_password_path(resource_name), :style => "color: white;" %><br />
</div>