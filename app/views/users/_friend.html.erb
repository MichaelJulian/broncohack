<tr>
  <th scope="row"><%= image_tag "#{friend.image}", size: "35x30" %></th> 
  <td><%= link_to friend.first_name + " " + friend.last_name[0,1] + ".", profile_user_path(friend.id) %></td>
  <td><%= friend.updated_at.strftime('%m/%d/%Y') %></td>
  <td class="text-right">

  

  <%= link_to destroy_friendship_path(friend_id: friend.id), :data => {toggle: "tooltip", placement: "top", confirm: "Are you sure you want to unmatch with #{friend.first_name} ?" }, title: "Unmatch", id: "delete_friendship", method: :delete do %>
    <i class="fa fa fa-times"></i>
  <% end %>
  </td>
</tr>